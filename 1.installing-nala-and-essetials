#!/bin/sh

## installing nala
sudo apt install nala

## installing esstinial packages 
sudo nala install rofi lightdm alacritty git awesome blueman nemo light xwallpaper mpv aria2 seahorse lxappearance zsh qt5ct qt5-style-plugins mpd mpdris2 ncmpcpp fzf flameshot typecatcher gnome-disk-utility gcc python3-dev python3-pip python3-setuptools python3-venv pandoc zsh-syntax-highlighting zsh-autosuggestions vnstat network-manager-gnome unzip -y

### cleaning up 
sudo apt autoclean -y && sudo apt autoremove -y

### reboot
reboot
